{
  "name": "rin-server",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "if [ -f wrangler.toml ]; then wrangler deploy --dry-run --outdir=dist; else wrangler deploy src/_worker.ts --name ${WORKER_NAME:-rin-server} --compatibility-date=2026-01-20 --dry-run --outdir=dist; fi",
    "cf:deploy": "if [ -f wrangler.toml ]; then wrangler deploy; else wrangler deploy src/_worker.ts --name ${WORKER_NAME:-rin-server} --compatibility-date=2026-01-20; fi",
    "dev": "bun wrangler dev --port 11498",
    "dev:cron": "bun wrangler dev --port 11498 --test-scheduled #see https://developers.cloudflare.com/workers/configuration/cron-triggers/#test-cron-triggers",
    "cf-typegen": "wrangler types",
    "db:gen": "bun drizzle-kit generate",
    "preview": "wrangler pages dev dist --compatibility-date=2023-12-20",
    "migrate:visits": "bun run scripts/migrate-visits.ts",
    "test": "bun run test:ci",
    "test:watch": "vitest --config ./vitest.config.ts src tests/security tests/unit tests/integration --passWithNoTests",
    "test:unit": "vitest run --config ./vitest.config.ts src tests/security tests/unit --passWithNoTests",
    "test:integration": "vitest run --config ./vitest.config.ts tests/integration --passWithNoTests",
    "test:remote": "bun run scripts/run-remote-tests.ts",
    "test:ci": "bun run test:unit && bun run test:integration",
    "test:coverage": "bun run test:coverage:ci",
    "test:coverage:ci": "vitest run --config ./vitest.config.ts --coverage src tests/security tests/unit tests/integration --passWithNoTests",
    "check": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.13",
    "@types/bun": "^1.1.2",
    "@vitest/coverage-istanbul": "~3.2.4",
    "drizzle-kit": "^0.21.2",
    "strip-indent": "^4.0.0",
    "typescript": "^5.0.4",
    "vitest": "~3.2.4",
    "wrangler": "^4.61.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@rin/api": "workspace:*",
    "arctic": "^3.7.0",
    "aws4fetch": "^1.0.20",
    "drizzle-orm": "^0.30.10",
    "fast-xml-parser": "^5.3.6",
    "feed": "^5.2.0",
    "hono": "^4.10.2",
    "html-to-md": "^0.8.5",
    "jose": "^6.1.3",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "unified": "^11.0.4"
  },
  "trustedDependencies": [
    "es5-ext"
  ]
}
