{
  "name": "rin",
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "server",
    "client"
  ],
  "private": true,
  "scripts": {
    "dev": "bun cli/bin/rin.ts dev",
    "dev:setup": "bun scripts/setup-dev.ts",
    "dev:client": "bun cli/bin/rin.ts dev --client-only",
    "dev:server": "bun cli/bin/rin.ts dev --server-only",
    "dev:hot": "bun cli/bin/rin.ts dev --with-client",
    "dev:cron": "bun wrangler dev --port 11498 --test-scheduled",
    "test": "bun test",
    "test:server": "bun --filter './server' test",
    "test:server:watch": "bun --filter './server' test --watch",
    "test:coverage": "bun test --coverage",
    "db:migrate": "bun cli/bin/rin.ts db migrate",
    "db:generate": "bun --filter './server' db:gen",
    "db:fix": "bun scripts/db-fix-top-field.ts",
    "check": "turbo check",
    "deploy": "bun cli/bin/rin.ts deploy",
    "build": "turbo build",
    "i18n:extract": "bun --filter './client' i18n",
    "clean": "rm -rf dist node_modules client/node_modules server/node_modules .turbo wrangler.toml client/.env .dev.vars",
    "format:check": "treefmt --fail-on-change",
    "format:write": "treefmt",
    "lint:actions": "actionlint -shellcheck= -ignore 'the runner of \".*\" action is too old to run on GitHub Actions'",
    "lint:biome": "bunx @biomejs/biome@2.4.0 lint --files-ignore-unknown=true client server packages cli docs scripts package.json turbo.json biome.json",
    "lint:yaml": "yamllint -s -c .yamllint.yaml .",
    "lint": "bun run lint:actions && bun run lint:yaml && bun run lint:biome",
    "release": "bun cli/bin/rin.ts release"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "turbo": "^1.13.3"
  },
  "dependencies": {
    "wrangler": "^4.65.0"
  }
}
